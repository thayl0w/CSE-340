<main>
  <h1>Account Management</h1>

  <%- messages() %>

  <% if (loggedin) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>

    <!-- Update Info link for everyone -->
    <p>
      <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
    </p>

    <!-- Only show this section for Admin or Employee -->
    <% if (accountData.account_type === "Admin" || accountData.account_type === "Employee") { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv">Go to Inventory Management</a></p>
    <% } %>

  <% } else { %>
    <p>You are not logged in</p>
  <% } %>
</main>

