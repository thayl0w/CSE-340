<link rel="stylesheet" href="/css/styles.css">
<main>
  <div class="login-card">
    <h1>Register</h1>
    <% if (locals.message) { %>
      <p class="notice"><%= message %></p>
    <% } %>
    <% if (locals.errors) { %>
      <p class="error"><%= errors %></p>
    <% } %>
    <form action="/account/register" method="post" class="login-form">
      <label for="account_firstname">First Name</label>
      <input type="text" name="account_firstname" id="account_firstname" required 
        value="<%= locals.account_firstname ? account_firstname : '' %>">

      <label for="account_lastname">Last Name</label>
      <input type="text" name="account_lastname" id="account_lastname" required 
        value="<%= locals.account_lastname ? account_lastname : '' %>">

      <label for="account_email">Email</label>
      <input type="email" name="account_email" id="account_email" required 
        value="<%= locals.account_email ? account_email : '' %>">

      <label for="account_password">Password</label>
      <input type="password" name="account_password" id="account_password" required 
        pattern="(?=^.{12,}$)(?=.*\d)(?=.*\W+)(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$">
      <em class="password-hint">
        Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.
      </em>
      <button type="button" class="show-password-btn" onclick="togglePassword()">Show Password</button>

      <input type="submit" value="Register" class="btn">
    </form>
    <div class="form-footer">
      <p>Already have an account? <a href="/account/login">Login here</a></p>
    </div>
  </div>
</main>
<script>
function togglePassword() {
  var pwd = document.getElementById('account_password');
  if (pwd.type === 'password') {
    pwd.type = 'text';
  } else {
    pwd.type = 'password';
  }
}
</script> 