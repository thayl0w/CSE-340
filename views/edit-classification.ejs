<main>
    <h1>Edit Classification</h1>

    <% if (messages && messages.notice) { %>
      <div class="notice"><%= messages.notice %></div>
    <% } %>
    
    <% if (messages && messages.error) { %>
      <div class="error"><%= messages.error %></div>
    <% } %>
    
    <% if (errors && errors.length > 0) { %>
      <div class="error-messages">
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/inv/edit-classification/<%= classification.classification_id %>" method="post">
      <input type="hidden" name="classification_id" value="<%= classification.classification_id %>">
      <label for="classification_name">Classification Name</label>
      <input 
        type="text" 
        id="classification_name" 
        name="classification_name" 
        required 
        pattern="^[A-Za-z0-9]+$"
        title="No spaces or special characters allowed."
        value="<%= classification.classification_name %>"
      >
      <button type="submit">Update Classification</button>
    </form>
</main>