<main>
    <h1>Manage Classifications</h1>
    <p>Update or delete existing classification names.</p>

    <table>
        <thead>
            <tr>
                <th>Classification Name</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% classifications.forEach(classification=> { %>
                <tr>
                    <form action="/inv/update-classification" method="post">
                        <td>
                            <input type="hidden" name="classification_id"
                                value="<%= classification.classification_id %>">
                            <input type="text" name="classification_name"
                                value="<%= classification.classification_name %>" required>
                        </td>
                        <td><button type="submit">Update</button></td>
                    </form>

                    <form action="/inv/delete-classification" method="post"
                        onsubmit="return confirm('Are you sure you want to delete this classification?');">
                        <input type="hidden" name="classification_id" value="<%= classification.classification_id %>">
                        <td><button type="submit">Delete</button></td>
                    </form>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <p><a href="/inv">Back to Inventory Management</a></p>
</main>  